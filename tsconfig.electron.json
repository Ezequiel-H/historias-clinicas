{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist-electron",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["electron/**/*"]
}

